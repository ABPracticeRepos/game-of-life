# Initiaing build from REDHAT Node 
pipeline {
    agent{ label 'REDHAT' }      
    stages {
        stage ('source'){
            steps {
                git 'https://github.com/ABPracticeRepos/game-of-life.git'
            }
        }
        stage('Package'){
            steps {
                sh 'mvn package'
            }
        }
    }
}

# Trigger with PollSCM
pipeline {
    agent{ label 'REDHAT' }      
    triggers { pollSCM('* * * * *') }
    stages {
        stage('clone and compile') {
            steps{
                git branch: 'declarative',
                url: 'https://github.com/ABPracticeRepos/game-of-life.git'
                sh 'mvn compile'
            }
        }
    }
}


# Taking User Inputs between the builds
pipeline {
    agent{ label 'MASTER' }      
    triggers { 
        upstream(upstreamProjects: 'sample', threshold: hudson.model.Result.SUCCESS) 
    }
    stages {
        stage ('source'){
            steps {
                git 'https://github.com/ABPracticeRepos/game-of-life.git'
            }
        }
        stage('Package'){
            steps {
                sh 'mvn package'
                input 'Continue to Next Step?'
                archiveArtifacts '/target/*.jar'
            }
        }
    }
}